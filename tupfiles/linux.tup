CC = gcc
CX = g++
AR = ar

CFLAGS += -Wall -Wextra -Wfatal-errors -pedantic -std=iso9899:2017
CXXFLAGS += -Wall -Wextra -Wfatal-errors -pedantic -std=c++17

ifeq (@(BUILD),debug)
	CFLAGS += -ggdb
	else
	ifeq (@(BUILD),plain)
		# do nothing
		else
		ifeq (@(BUILD),optim)
			CFLAGS += -O3
		endif
	endif
endif
